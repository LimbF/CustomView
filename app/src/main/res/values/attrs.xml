<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MyTitleBar">
        <!-- 左侧自定义属性-->
        <attr name="leftTextContent" format="string" />
        <attr name="leftTextSize" format="dimension" />
        <attr name="leftTextColor" format="color|reference" />
        <attr name="leftTextVisible" format="integer"/>
        <attr name="leftDrawable" format="integer"/>
        <!--中心自定义属性-->
        <attr name="centerTextContent" format="string" />
        <attr name="centerTextSize" format="dimension" />
        <attr name="centerTextColor" format="color|reference" />
        <attr name="centerTextVisible" format="integer"/>
        <!--右侧自定义属性-->
        <attr name="rightTextContent" format="string" />
        <attr name="rightTextSize" format="dimension" />
        <attr name="rightTextColor" format="color|reference" />
        <attr name="rightTextVisible" format="integer"/>
    </declare-styleable>
</resources>